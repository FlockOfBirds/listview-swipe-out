<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.ListViewSwipeOut.ListViewSwipeOut" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../xsd/widget.xsd">
    <name>DEMO; ListView swipe out, NOT for PRODUCTION</name>
    <description>ListView swipe out DEMO, NOT for PRODUCTION</description>
    <icon />
    <properties>
        <property key="targetName" type="string" required="true">
            <caption>Target List Name</caption>
            <category>Appearance</category>
            <description/>
        </property>
        <property key="onLeftSwipe" type="microflow" required="false">
            <caption>On left swipe</caption>
            <category>Behavior</category>
            <description>Microflow to execute after swiping to the left</description>
            <returnType type="Void"/>
        </property>
        <property key="onRightSwipe" type="microflow" required="false">
            <caption>On right swipe</caption>
            <category>Behavior</category>
            <description>Microflow to execute after swiping to the right</description>
            <returnType type="Void"/>
        </property>
        <property key="microflowTriggerDelay" type="integer" required="true" defaultValue="2">
            <caption>Microflow trigger delay</caption>
            <category>Behavior</category>
            <description>How many seconds after swiping should the corresponding microflow be triggered</description>
        </property>
        <property key="afterSwipeAction" type="enumeration" required="true" defaultValue="remove">
            <caption>After swipe action</caption>
            <category>Behavior</category>
            <description>Visual action to take once swiping is done</description>
            <enumerationValues>
                <enumerationValue key="remove">Remove</enumerationValue>
                <enumerationValue key="none">None</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>
