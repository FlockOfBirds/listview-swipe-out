<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.ListViewSwipeOut.ListViewSwipeOut" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../../../../xsd/widget.xsd">
    <name>DEMO; ListView swipe out, NOT for PRODUCTION</name>
    <description>ListView swipe out DEMO, NOT for PRODUCTION</description>
    <icon/>
    <properties>
        <property key="targetName" type="string" required="true">
            <caption>Target listview</caption>
            <category>General</category>
            <description>Name of the listview</description>
        </property>
        <property key="foregroundName" type="string" required="false">
            <caption>Foreground</caption>
            <category>General</category>
            <description>Optional name of the component to swipe, when empty list view item is used</description>
        </property>
        <property key="transparentOnSwipe" type="boolean" required="true" defaultValue="false">
            <caption>Transparent swipe</caption>
            <category>General</category>
            <description>Make item gradually transparent while swiping</description>
        </property>
        <property key="itemEntity" type="entity" allowNonPersistableEntities="true">
            <caption>Item entity</caption>
            <category>General</category>
            <description>Entity type of the list view, passed as context to the action</description>
        </property>
        <property key="actionTriggerDelay" type="integer" required="true" defaultValue="800">
            <caption>Delay action</caption>
            <category>General</category>
            <description>Time of the animation in microseconds, after swiping the action is triggered</description>
        </property>
        <property key="onSwipeActionRight" type="enumeration" required="true" defaultValue="disabled">
            <caption>On swipe right</caption>
            <category>Swipe right</category>
            <description>Action take on swipe</description>
            <enumerationValues>
                <enumerationValue key="disabled">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onSwipeActionLeft" type="enumeration" required="true" defaultValue="disabled">
            <caption>On swipe left</caption>
            <category>Swipe left</category>
            <description>Action take on swipe</description>
            <enumerationValues>
                <enumerationValue key="disabled">Do nothing</enumerationValue>
                <enumerationValue key="showPage">Show a page</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="backgroundNameRight" type="string" required="false">
            <caption>Background right</caption>
            <category>Swipe right</category>
            <description>Optional name of the component shown as background during swiping</description>
        </property>
        <property key="backgroundNameLeft" type="string" required="false">
            <caption>Background left</caption>
            <category>Swipe left</category>
            <description>Optional name of the component shown as background during swiping</description>
        </property>
        <property key="afterSwipeBackgroundNameRight" type="string" required="false">
            <caption>Background after swipe right</caption>
            <category>Swipe right</category>
            <description>Optional name of the component shown as background after swiping is done</description>
        </property>
        <property key="afterSwipeBackgroundNameLeft" type="string" required="false">
            <caption>Background after swipe left</caption>
            <category>Swipe left</category>
            <description>Optional name of the component shown as background after swiping is done</description>
        </property>
        <property key="onSwipeMicroflowLeft" type="microflow" required="false" entityProperty="itemEntity">
            <caption>Microflow left</caption>
            <category>Swipe left</category>
            <description>Microflow to execute after swiping</description>
            <returnType type="Void"/>
        </property>
        <property key="onSwipeMicroflowRight" type="microflow" required="false" entityProperty="itemEntity">
            <caption>Microflow right</caption>
            <category>Swipe right</category>
            <description>Microflow to execute after swiping</description>
            <returnType type="Void"/>
        </property>
        <property key="onSwipePageLeft" type="form" required="false">
            <caption>Open page left</caption>
            <category>Swipe left</category>
            <description>The page to open after swiping</description>
        </property>
        <property key="onSwipePageRight" type="form" required="false">
            <caption>Open page right</caption>
            <category>Swipe right</category>
            <description>The page to open after swiping</description>
        </property>
        <property key="afterSwipeActionLeft" type="enumeration" required="true" defaultValue="hide">
            <caption>After swipe left</caption>
            <category>Swipe left</category>
            <description>Visual action to take once swiping is done</description>
            <enumerationValues>
                <enumerationValue key="hide">Hide</enumerationValue>
                <enumerationValue key="reset">Reset</enumerationValue>
            </enumerationValues>
        </property>
        <property key="afterSwipeActionRight" type="enumeration" required="true" defaultValue="hide">
            <caption>After swipe right</caption>
            <category>Swipe right</category>
            <description>Visual action to take once swiping is done</description>
            <enumerationValues>
                <enumerationValue key="hide">Hide</enumerationValue>
                <enumerationValue key="reset">Reset</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>
